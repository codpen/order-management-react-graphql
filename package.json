{
  "name": "mayoor",
  "description": "",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "postinstall": "npm -s run generate && cd frontend && npm i",
    "build": "cd frontend && npm run build",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only -P nexus.tsconfig.json backend/src/schema",
    "database:push": "prisma db push",
    "database:seed": "ts-node ./prisma/seed.ts",
    "start:full": "npm run database:migrate && npm run database:seed && npm run start"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@vercel/node": "^1.15.2",
    "prisma": "^3.14.0"
  },
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "apollo-server-micro": "^3.7.0",
    "bcrypt": "^5.0.1",
    "graphql-middleware": "^6.1.26",
    "graphql-shield": "^7.5.0",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^1.3.0",
    "nexus-plugin-prisma": "^0.35.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
